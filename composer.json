{
  "name": "hexonet/whmcs-ispapi-ssl",
  "description": "ISPAPI SSL Provisioning & Addon Modules for WHMCS",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Sebastian Vassiliou",
      "email": "svassiliou@hexonet.net"
    }
  ],
  "require-dev": {
    "phpstan/phpstan": "^0.12.56"
  },
  "config": {
    "vendor-dir": "modules/servers/ispapissl/vendor"
  },
  "autoload": {
    "psr-4": {"HEXONET\\WHMCS\\ISPAPI\\SSL\\": "modules/servers/ispapissl/lib/"}
  },
  "scripts": {
    "phpstan": [
      "rm -rf modules/servers/ispapissl/vendor",
      "@composer update",
      "phpstan analyze -c phpstan.neon"
    ],
    "test": [
      "@composer update",
      "phpunit"
    ]
  },
  "require": {
    "ext-openssl": "*",
    "ext-json": "*"
  }
}
