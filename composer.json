{
  "name": "centralnic-reseller/whmcs-ssl",
  "description": "CentralNic SSL Provisioning & Addon Modules for WHMCS",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Sebastian Vassiliou",
      "email": "svassiliou@hexonet.net"
    }
  ],
  "config": {
    "platform": {
      "php": "7.4.0"
    },
    "vendor-dir": "modules/servers/cnicssl/vendor",
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {"CNIC\\WHMCS\\SSL\\": "modules/servers/cnicssl/lib/"}
  },
  "scripts": {
    "compatibility": [
      "@composer update",
      "phpcs --standard=PHPCompatibility -q -n --colors --ignore=node_modules,vendor,templates_c --runtime-set testVersion 7.4 modules"
    ],
    "phpstan": [
      "@composer update",
      "phpstan analyze -c phpstan.neon --memory-limit 2G"
    ],
    "codecheck": [
      "@composer update",
      "phpcs --standard=PSR12 -q -n --colors --ignore=node_modules,vendor,templates_c modules tests"
    ],
    "codefix": [
      "@composer update",
      "phpcbf --standard=PSR12 -q --ignore=node_modules,vendor,templates_c modules tests"
    ],
    "test": [
      "@composer update",
      "phpunit"
    ]
  },
  "require": {
    "php": "^7.4",
    "ext-openssl": "*",
    "ext-json": "*",
    "utopia-php/domains": "^1.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.7.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7.2",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.6.2",
    "phpcompatibility/php-compatibility": "^9.3.5"
  }
}
